{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/questions/today",
      "dest": "/backend/api/questions/today.js"
    },
    {
      "src": "/api/questions",
      "dest": "/backend/api/questions/index.js"
    },
    {
      "src": "/api/answers/stream",
      "dest": "/backend/api/answers/stream.js"
    },
    {
      "src": "/api/answers/question/(.*)",
      "dest": "/backend/api/answers/question.js"
    },
    {
      "src": "/api/answers",
      "dest": "/backend/api/answers/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/admin",
      "dest": "/frontend/admin.html"
    },
    {
      "src": "/question",
      "dest": "/frontend/question.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
