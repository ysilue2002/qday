{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10
      }
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/test-mongodb",
      "dest": "/backend/api/test-mongodb.js"
    },
    {
      "src": "/api/questions/today",
      "dest": "/backend/api/questions/today.js"
    },
    {
      "src": "/api/questions",
      "dest": "/backend/api/questions/index.js"
    },
    {
      "src": "/api/answers/stream",
      "dest": "/backend/api/answers/stream.js"
    },
    {
      "src": "/api/answers/question",
      "dest": "/backend/api/answers/question.js"
    },
    {
      "src": "/api/answers",
      "dest": "/backend/api/answers/index.js"
    },
    {
      "src": "/api/answers/(.*)/like",
      "dest": "/backend/api/answers/like.js"
    },
    {
      "src": "/api/answers/(.*)/dislike",
      "dest": "/backend/api/answers/dislike.js"
    },
    {
      "src": "/api/answers/(.*)/comment",
      "dest": "/backend/api/answers/comment.js"
    },
    {
      "src": "/api/answers/(.*)/report",
      "dest": "/backend/api/answers/report.js"
    },
    {
      "src": "/api/answers/(.*)/comment-report",
      "dest": "/backend/api/answers/comment-report.js"
    },
    {
      "src": "/api/answers/(.*)/delete",
      "dest": "/backend/api/answers/delete.js"
    },
    {
      "src": "/api/answers/(.*)/comment-delete",
      "dest": "/backend/api/answers/comment-delete.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/admin",
      "dest": "/frontend/admin.html"
    },
    {
      "src": "/question",
      "dest": "/frontend/question.html"
    },
    {
      "src": "/history",
      "dest": "/frontend/history.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
